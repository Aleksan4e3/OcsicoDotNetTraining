@inject IStringLocalizer<SharedResource> StringLocalizer

@model List<OrderDetailViewModel>

@{
    ViewData["Title"] = StringLocalizer["Menu"];
}

<h1 class="main-caption">@StringLocalizer["Menu"]</h1>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="menu-item">
        <partial name="_MenuItem" model="@Model[i]" />
    </div>
}

@section Scripts {
    <script src="js/menuItem.js"></script>
    @{await Html.RenderPartialAsync(StringLocalizer["Scripts"]);}
}
