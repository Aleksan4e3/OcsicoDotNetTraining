@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model List<OrderDetailViewModel>

@{
    ViewData["Title"] = SharedLocalizer["Basket"];
}

<h1>@SharedLocalizer["Basket"]</h1>

<form asp-action="PostOrderDetails" asp-controller="Basket">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="shopping-cart">
        <partial name="_ShoppingCart" for="@Model" />
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <input type="submit" value="@Localizer["BtnPost"]" class="btn btn-primary" />
    }
    else
    {
        <p>@Localizer["Message"]</p>
        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Index", "Basket")">@Localizer["BtnSignIn"]</a>
    }
</form>
