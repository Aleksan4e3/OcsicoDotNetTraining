@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResource> StringLocalizer

@model RegisterViewModel

@{
    ViewData["Title"] = Localizer["Register"];
}

<h2 class="main-caption">@Localizer["Register"]</h2>

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <br />
    <div>
        <input type="submit" value="@Localizer["BtnRegister"]" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync(StringLocalizer["Scripts"]);}
}
