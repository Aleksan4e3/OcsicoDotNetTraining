@inject IViewLocalizer Localizer

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-success" asp-controller="PersonalInfo" asp-action="Index">@Localizer["Welcome"] @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link text-success">@Localizer["SignOut"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-success" asp-controller="Account" asp-action="Register">@Localizer["Registration"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-success" asp-controller="Account" asp-action="Login">@Localizer["SignIn"]</a>
        </li>
    }
</ul>
