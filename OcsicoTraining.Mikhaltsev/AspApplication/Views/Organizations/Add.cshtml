@model AddEmployeeToOrganizationViewModel

@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                @Html.HiddenFor(x => x.OrganizationId)
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(x => x.SelectedEmployeeId)
                @Html.DropDownListFor(x => x.SelectedEmployeeId, Model.Employees, "-- Select --", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SelectedEmployeeId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(x => x.SelectedRoleId)
                @Html.DropDownListFor(x => x.SelectedRoleId, Model.Roles, "-- Select --", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.SelectedRoleId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
