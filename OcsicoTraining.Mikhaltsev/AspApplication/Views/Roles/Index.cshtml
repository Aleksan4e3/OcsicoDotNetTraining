@inject IViewLocalizer Localizer

@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = Localizer["Title"];
}

<h1>@Localizer["Header"]</h1>

<p>
    <a asp-action="Create">@Localizer["Create"]</a>
</p>

<form data-ajax="true"
      data-ajax-url="@Url.Action("RoleSearch")" ,
      data-ajax-update="#roleList" ,
      data-ajax-mode="replace">
    <input type="text" name="name" />
    <input type="submit" value="@Localizer["Search"]" />
</form>
<br />
<div id="roleList">
    <partial for="@Model" name="_RolesSearch" />
</div>
